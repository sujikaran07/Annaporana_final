<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the shape -->
    <solid android:color="@color/myapp_button_color"/>

    <!-- Adjust the corners to make it a rounded rectangle -->
    <corners android:radius="20dp"/>

    <!-- Optional padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional stroke/border -->
    <stroke android:width="1dp" android:color="#CCCCCC"/>
</shape>
