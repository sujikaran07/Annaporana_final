<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black shadow -->
            <corners android:radius="16dp" /> <!-- Rounded corners for shadow -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>

    <!-- Dialog Background -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#DBD5D5" /> <!-- White background for dialog -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>
