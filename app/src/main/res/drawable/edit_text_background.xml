<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Background color when focused -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
            <stroke android:width="1dp" android:color="#00FF00"/> <!-- Border color and width -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Background color when not focused -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
            <stroke android:width="1dp" android:color="#FFFFFF"/> <!-- Border color and width -->
        </shape>
    </item>
</selector>