<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the border color and width -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/>

    <!-- Define the background color (optional) -->
    <solid android:color="@android:color/transparent"/>

    <!-- Define the corner radius for rounded corners (optional) -->
    <corners android:radius="8dp"/>

    <!-- Optional padding inside the border -->
    <padding
        android:left="4dp"
        android:top="2dp"
        android:right="4dp"
        android:bottom="2dp"/>
</shape>
