<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rating"
    android:padding="16dp">



    <!-- Text asking for feedback -->
    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How did you like the recipe?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <!-- Text description -->

    <!-- RatingBar -->
    <TextView
        android:id="@+id/feedbackDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Could you take 60 seconds to share your experience with us?"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:layout_gravity="center"
        android:theme="@style/RatingBarStyle"
        android:layout_marginBottom="30dp"/>

    <!-- Call to Action Text -->
    <TextView
        android:id="@+id/callToActionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit : )"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
