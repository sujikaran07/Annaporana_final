<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/congrats2"
    android:padding="16dp">

    <!-- Share Icon at Top Right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="end">

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share Icon"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Congratulations Text -->
    <TextView
        android:id="@+id/congratulationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp" />

    <!-- Shared Recipe Text -->
    <TextView
        android:id="@+id/sharedRecipeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you've shared this recipe"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <!-- Image for Congratulations -->

    <!-- Ready Message Text -->
    <TextView
        android:id="@+id/readyMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itâ€™s now ready for people to\nfind, cook and enjoy"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp" />

    <!-- Done Button -->
    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_radius"
        android:padding="2dp"
        android:fontFamily="sans-serif-condensed-medium"
        style="@style/CustomButtonStyle2"
        android:text="Done"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
