<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="16dp"
    tools:context=".RecipeUploadPage">

    <!-- Button Container for Cancel, Save, and Upload -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- Cancel Button -->
        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:contentDescription="Cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/btn_radius"
            android:text="Save"
            android:textSize="16sp"
            android:textColor="@color/black"
            style="@style/CustomButtonStyle5"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="6dp" />

        <!-- Upload Button -->
        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Upload"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/btn_radius"
            style="@style/CustomButtonStyle4" />
    </LinearLayout>

    <!-- FrameLayout to overlay VideoView and TextView -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp">

        <!-- VideoView for uploading video -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Upload button overlay text -->
        <TextView
            android:id="@+id/uploadVideoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Recipe Video"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Scrollable Content Below VideoView -->
    <ScrollView
        android:id="@+id/scrollableContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Horizontal layout for Serves -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <!-- Label for Serves -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serves"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <!-- Input for Serves -->
                <EditText
                    android:id="@+id/servesEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="2 people"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp"
                    android:minWidth="150dp" />
            </LinearLayout>

            <!-- Horizontal layout for Cook time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <!-- Label for Cook time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cook time"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <!-- Input for Cook time -->
                <EditText
                    android:id="@+id/cookTimeEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="1 hr 30 mins"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp"
                    android:minWidth="150dp" />
            </LinearLayout>

            <!-- Horizontal layout for Nutrition -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <!-- Label for Nutrition -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <!-- Input for Nutrition -->
                <EditText
                    android:id="@+id/nutritionEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="750 cal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp"
                    android:minWidth="150dp" />
            </LinearLayout>

            <!-- Ingredients input field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <!-- Label for Ingredients -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Input for Ingredients -->
                <EditText
                    android:id="@+id/ingredientsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="List all ingredients"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp"
                    android:minHeight="150dp"
                    android:gravity="top"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Methods input field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Label for Methods -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Methods"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <!-- Input for Methods -->
                <EditText
                    android:id="@+id/methodsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe the cooking methods"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/edit_text_background"
                    android:padding="10dp"
                    android:minHeight="150dp"
                    android:gravity="top"
                    android:inputType="textMultiLine" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
