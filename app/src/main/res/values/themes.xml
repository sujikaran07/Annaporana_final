<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item> <!-- Added variant if needed for Material3 -->
        <item name="colorSecondary">@color/white</item> <!-- Set secondary color as well -->
        <!-- Set status and navigation bar colors for Edge-to-Edge support -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp">
        <!-- Add any additional customizations if necessary -->
        <!-- Customize font family, size, or other elements here if needed -->
    </style>

    <!-- Custom Button Styles -->
    <style name="CustomButtonStyle1" parent="Widget.Material3.Button">
        <item name="backgroundTint">#3B6E90</item>
        <item name="background">@drawable/border_button</item> <!-- Ensure you have border_button.xml drawable -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButtonStyle2" parent="Widget.Material3.Button">
